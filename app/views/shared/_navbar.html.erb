<nav class="navbar navbar-default">
  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <div class="navbar-header">
          <%= link_to "Danebook", current_user ? timeline_path : signup_path, class: "navbar-brand" %>
        </div>
      </div>
      <div class="col-md-10">
        <% if signed_in_user? %>
          <div class="navbar-form navbar-right">
            <div class="btn-group btn-sm">
              <%= link_to current_user.first_name, profile_path(current_user) , class: "btn btn-default" %>
              <%= link_to "Logout", session_path, method: :delete, class: "btn btn-default" %>
            </div>
          </div>
        <% else %>
          <%= form_tag session_path, class: "navbar-form navbar-right" do %>
            <div class="form-group">
              <%= text_field_tag :email, nil, placeholder: "Email", class: "form-control input-sm" %>
              <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control input-sm" %>
              <label class="radio-inline">
                Remember me?
                <%= check_box_tag :remember_me, class: "form-control"%>
              </label>
            </div>
            <%= submit_tag "Login", class: "btn btn-default btn-sm" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
